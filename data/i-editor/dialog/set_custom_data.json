{
  "type": "minecraft:confirmation",
  "title": {
    "translate": "title.i-editor.set_custom_data",
    "fallback": "Set Custom Data"
  },
  "body": {
    "type": "minecraft:plain_message",
    "contents": {
      "translate": "text.i-editor.custom_data_info",
      "fallback": "Enter the custom data to apply it to the subject:",
      "color": "gray"
    },
    "width": 300
  },
  "inputs": [
    {
      "type": "minecraft:text",
      "key": "tag",
      "label": {
        "translate": "text.i-editor.tag",
        "fallback": "Tag"
      },
      "max_length": 9999
    }
  ],
  "can_close_with_escape": true,
  "pause": false,
  "after_action": "none",
  "yes": {
    "label": {
      "translate": "gui.done",
      "color": "green"
    },
    "action": {
      "type": "dynamic/run_command",
      "template": "item modify entity @s weapon.mainhand [{\"function\":\"minecraft:set_custom_data\",\"tag\":\"$(tag)\"}]"
    }
  },
  "no": {
    "label": {
      "translate": "gui.back",
      "color": "red"
    },
    "action": {
      "type": "minecraft:show_dialog",
      "dialog": "i-editor:menu"
    }
  }
}