        },
        {
            "type": "minecraft:boolean",
            "key": "append",
            "label": {
                "translate": "text.i-editor.append",
                "fallback": "Append"
            },
            "initial": false
        }
    ],
    "can_close_with_escape": true,
    "pause": false,
    "after_action": "none",
    "yes": {
        "label": {
            "translate": "gui.done",
            "color": "green"
        },
        "action": {
            "type": "dynamic/run_command",
            "template": "item modify entity @s weapon.mainhand [{\"function\":\"minecraft:set_banner_pattern\",\"patterns\":[{\"pattern\":\"minecraft:skull_stripes\",\"color\":\"$(color)\"}],\"append\":$(append)}]"
        }
    },
    "no": {
        "label": {
            "translate": "gui.back",
            "color": "red"
        },
        "action": {
            "type": "minecraft:show_dialog",
