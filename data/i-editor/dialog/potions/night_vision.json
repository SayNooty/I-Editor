{
  "type": "minecraft:confirmation",
  "title": [
    {
      "translate": "title.i-editor.potion",
      "fallback": "Potion: "
    },
    {
      "translate": "effect.minecraft.night_vision",
      "color": "#C2FF66"
    }
  ],
  "external_title": {
    "translate": "effect.minecraft.night_vision",
    "color": "#C2FF66"
  },
  "body": {
    "type": "minecraft:plain_message",
    "contents": {
      "translate": "text.i-editor.set_potion_info",
      "fallback": "Adjust the parameters of this effect to apply it to an item:",
      "color": "gray"
    },
    "width": 300
  },
  "inputs": [
    {
      "type": "minecraft:number_range",
      "key": "amplifier",
      "width": 150,
      "label": {
        "translate": "text.i-editor.amplifier",
        "fallback": "Amplifier"
      },
      "start": 0,
      "end": 255,
      "step": 1,
      "initial": 0
    },
    {
      "type": "minecraft:text",
      "key": "duration",
      "width": 150,
      "label": [
        {
          "translate": "text.i-editor.duration",
          "fallback": "Duration "
        },
        {
          "translate": "text.i-editor.tick_info",
          "fallback": "(in ticks)",
          "color": "gray"
        }
      ],
      "initial": "20",
      "max_length": 10
    },
    {
      "type": "minecraft:boolean",
      "key": "ambient",
      "label": {
        "translate": "text.i-editor.ambient",
        "fallback": "Ambient"
      },
      "initial": true
    },
    {
      "type": "minecraft:boolean",
      "key": "show_particles",
      "label": {
        "translate": "text.i-editor.show_particles",
        "fallback": "Show Particles"
      },
      "initial": true
    },
    {
      "type": "minecraft:boolean",
      "key": "show_icon",
      "label": {
        "translate": "text.i-editor.show_icon",
        "fallback": "Show Icon"
      },
      "initial": true
    }
  ],
  "can_close_with_escape": true,
  "pause": false,
  "after_action": "none",
  "yes": {
    "label": {
      "translate": "gui.done",
      "color": "green"
    },
    "action": {
      "type": "dynamic/run_command",
      "template": "item modify entity @s weapon.mainhand [{\"function\":\"minecraft:set_components\",\"components\":{\"minecraft:potion_contents\":{\"custom_effects\":[{\"id\":\"minecraft:night_vision\",\"amplifier\":$(amplifier),\"duration\":$(duration),\"ambient\":$(ambient),\"show_particles\":$(show_particles),\"show_icon\":$(show_icon)}]}}}]"
    }
  },
  "no": {
    "label": {
      "translate": "gui.back",
      "color": "red"
    },
    "action": {
      "type": "minecraft:show_dialog",
      "dialog": "i-editor:set_potion"
    }
  }
}