{
  "type": "minecraft:confirmation",
  "title": [
    {
      "translate": "title.i-editor.component",
      "fallback": "Component: "
    },
    {
      "translate": "component.name.provides_trim_material",
      "fallback": "Provides Trim Material",
      "color": "yellow"
    }
  ],
  "external_title": {
    "translate": "component.name.provides_trim_material",
    "fallback": "Provides Trim Material"
  },
  "body": {
    "type": "minecraft:plain_message",
    "contents": {
      "translate": "text.i-editor.component_provides_trim_material_info",
      "fallback": "Select the trim material that will be applied when using the trim on the smithing table:",
      "color": "gray"
    },
    "width": 300
  },
  "inputs": [
    {
      "type": "minecraft:single_option",
      "key": "material",
      "label": {
        "translate": "text.i-editor.material",
        "fallback": "Material"
      },
      "options": [
        {
          "id": "amethyst",
          "display": {
            "translate": "text.i-editor.trim_material.amethyst",
            "fallback": "Amethyst",
            "color": "#9A5CC6"
          }
        },
        {
          "id": "copper",
          "display": {
            "translate": "text.i-editor.trim_material.copper",
            "fallback": "Copper",
            "color": "#B4684D"
          }
        },
        {
          "id": "diamond",
          "display": {
            "translate": "text.i-editor.trim_material.diamond",
            "fallback": "Diamond",
            "color": "#6EECD2"
          }
        },
        {
          "id": "emerald",
          "display": {
            "translate": "text.i-editor.trim_material.emerald",
            "fallback": "Emerald",
            "color": "#11A036"
          }
        },
        {
          "id": "gold",
          "display": {
            "translate": "text.i-editor.trim_material.gold",
            "fallback": "Gold",
            "color": "#DEB12D"
          }
        },
        {
          "id": "iron",
          "display": {
            "translate": "text.i-editor.trim_material.iron",
            "fallback": "Iron",
            "color": "#ECECEC"
          }
        },
        {
          "id": "lapis",
          "display": {
            "translate": "text.i-editor.trim_material.lapis",
            "fallback": "Lapis",
            "color": "#416E97"
          }
        },
        {
          "id": "netherite",
          "display": {
            "translate": "text.i-editor.trim_material.netherite",
            "fallback": "Netherite",
            "color": "#625859"
          }
        },
        {
          "id": "quartz",
          "display": {
            "translate": "text.i-editor.trim_material.quartz",
            "fallback": "Quartz",
            "color": "#E3D4C4"
          }
        },
        {
          "id": "redstone",
          "display": {
            "translate": "text.i-editor.trim_material.redstone",
            "fallback": "Redstone",
            "color": "#971607"
          }
        },
        {
          "id": "resin",
          "display": {
            "translate": "text.i-editor.trim_material.resin",
            "fallback": "Resin",
            "color": "#FC7812"
          }
        }
      ]
    }
  ],
  "can_close_with_escape": true,
  "pause": false,
  "after_action": "none",
  "yes": {
    "label": {
      "translate": "gui.done",
      "color": "green"
    },
    "action": {
      "type": "dynamic/run_command",
      "template": "item modify entity @s weapon.mainhand [{\"function\":\"minecraft:set_components\",\"components\":{\"minecraft:provides_trim_material\":\"$(material)\"}}]"
    }
  },
  "no": {
    "label": {
      "translate": "gui.back",
      "color": "red"
    },
    "action": {
      "type": "show_dialog",
      "dialog": "i-editor:set_component"
    }
  }
}