{
  "type": "minecraft:confirmation",
  "title": [
    {
      "translate": "title.i-editor.component",
      "fallback": "Component: "
    },
    {
      "translate": "component.name.use_remainder",
      "fallback": "Use Remainder",
      "color": "yellow"
    }
  ],
  "external_title": {
    "translate": "component.name.use_remainder",
    "fallback": "Use Remainder"
  },
  "body": {
    "type": "minecraft:item",
    "item": {
      "id": "minecraft:milk_bucket"
    },
    "description": {
      "translate": "text.i-editor.component_use_remainder_info",
      "fallback": "Enter the item ID and select the count of the item that will appear after consuming the previous one:",
      "color": "gray"
    },
    "show_decorations": false,
    "show_tooltip": false
  },
  "inputs": [
    {
      "type": "minecraft:text",
      "key": "item",
      "label": {
        "translate": "text.i-editor.item",
        "fallback": "Item"
      },
      "max_length": 9999
    },
    {
      "type": "minecraft:number_range",
      "key": "count",
      "label": {
        "translate": "text.i-editor.count",
        "fallback": "Count"
      },
      "start": 1,
      "end": 99,
      "step": 1,
      "initial": 1
    }
  ],
  "can_close_with_escape": true,
  "pause": false,
  "after_action": "none",
  "yes": {
    "label": {
      "translate": "gui.done",
      "color": "green"
    },
    "action": {
      "type": "dynamic/run_command",
      "template": "item modify entity @s weapon.mainhand [{\"function\":\"minecraft:set_components\",\"components\":{\"minecraft:use_remainder\":{\"id\":\"$(item)\",\"count\":$(count)}}}]"
    }
  },
  "no": {
    "label": {
      "translate": "gui.back",
      "color": "red"
    },
    "action": {
      "type": "show_dialog",
      "dialog": "i-editor:set_component"
    }
  }
}