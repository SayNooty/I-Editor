{
  "type": "minecraft:confirmation",
  "title": [
    {
      "translate": "title.i-editor.component",
      "fallback": "Component: "
    },
    {
      "translate": "component.name.weapon",
      "fallback": "Weapon",
      "color": "yellow"
    }
  ],
  "external_title": {
    "translate": "component.name.weapon",
    "fallback": "Weapon"
  },
  "body": {
    "type": "minecraft:plain_message",
    "contents": {
      "translate": "text.i-editor.component_weapon_info",
      "fallback": "Enter the cost of strength per hit and the count of seconds for which this item can disable the blocking shield upon a successful attack:",
      "color": "gray"
    },
    "width": 300
  },
  "inputs": [
    {
      "type": "minecraft:text",
      "key": "item_damage_per_attack",
      "label": [
        {
          "translate": "text.i-editor.item_damage_per_attack",
          "fallback": "Item Damage Per Attack "
        },
        {
          "translate": "text.i-editor.min_0",
          "fallback": "<min: 0>",
          "color": "dark_gray"
        }
      ],
      "max_length": 9999
    },
    {
      "type": "minecraft:text",
      "key": "disable_blocking_for_seconds",
      "label": [
        {
          "translate": "text.i-editor.disable_blocking_for_seconds",
          "fallback": "Disable Blocking For Seconds "
        },
        {
          "translate": "text.i-editor.min_0",
          "fallback": "<min: 0>",
          "color": "dark_gray"
        }
      ]
    }
  ],
  "can_close_with_escape": true,
  "pause": false,
  "after_action": "none",
  "yes": {
    "label": {
      "translate": "gui.done",
      "color": "green"
    },
    "action": {
      "type": "dynamic/run_command",
      "template": "item modify entity @s weapon.mainhand [{\"function\":\"minecraft:set_components\",\"components\":{\"minecraft:weapon\":{\"item_damage_per_attack\":$(item_damage_per_attack),\"disable_blocking_for_seconds\":$(disable_blocking_for_seconds)}}}]"
    }
  },
  "no": {
    "label": {
      "translate": "gui.back",
      "color": "red"
    },
    "action": {
      "type": "show_dialog",
      "dialog": "i-editor:set_component"
    }
  }
}