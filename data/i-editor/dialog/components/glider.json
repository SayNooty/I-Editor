{
  "type": "minecraft:confirmation",
  "title": [
    {
      "translate": "title.i-editor.component",
      "fallback": "Component: "
    },
    {
      "translate": "component.name.glider",
      "fallback": "Glider",
      "color": "yellow"
    }
  ],
  "external_title": {
    "translate": "component.name.glider",
    "fallback": "Glider"
  },
  "body": {
    "type": "minecraft:item",
    "item": {
      "id": "minecraft:elytra"
    },
    "description": {
      "translate": "text.i-editor.component_glider_info",
      "fallback": "There is no need to configure anything here, just click done to allow the item the opportunity to fly like an elytra, and if you don't want to, then click back:",
      "color": "gray"
    },
    "show_decorations": false,
    "show_tooltip": false
  },
  "inputs": [],
  "can_close_with_escape": true,
  "pause": false,
  "after_action": "none",
  "yes": {
    "label": {
      "translate": "gui.done",
      "color": "green"
    },
    "action": {
      "type": "dynamic/run_command",
      "template": "item modify entity @s weapon.mainhand [{\"function\":\"minecraft:set_components\",\"components\":{\"minecraft:glider\":{$(glider)}}}]"
    }
  },
  "no": {
    "label": {
      "translate": "gui.back",
      "color": "red"
    },
    "action": {
      "type": "show_dialog",
      "dialog": "i-editor:set_component"
    }
  }
}