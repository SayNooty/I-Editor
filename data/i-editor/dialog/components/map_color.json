{
  "type": "minecraft:confirmation",
  "title": [
    {
      "translate": "title.i-editor.component",
      "fallback": "Component: "
    },
    {
      "translate": "component.name.map_color",
      "fallback": "Map Color",
      "color": "yellow"
    }
  ],
  "external_title": {
    "translate": "component.name.map_color",
    "fallback": "Map Color"
  },
  "body": {
    "type": "minecraft:item",
    "item": {
      "id": "minecraft:filled_map"
    },
    "description": {
      "translate": "text.i-editor.component_map_color_info",
      "fallback": "Enter the color code (decimal) for the map:"
    },
    "show_decorations": false,
    "show_tooltip": false
  },
  "inputs": [
    {
      "type": "minecraft:text",
      "key": "color",
      "width": 150,
      "label": [
        {
          "translate": "text.i-editor.map_color",
          "fallback": "Map Color "
        },
        {
          "translate": "text.i-editor.decimal",
          "fallback": "(decimal) ",
          "color": "gray"
        }
      ],
      "max_length": 9999
    }
  ],
  "can_close_with_escape": true,
  "pause": false,
  "after_action": "none",
  "yes": {
    "label": {
      "translate": "gui.done",
      "color": "green"
    },
    "action": {
      "type": "dynamic/run_command",
      "template": "item modify entity @s weapon.mainhand [{\"function\":\"minecraft:set_components\",\"components\":{\"minecraft:map_color\":$(color)}}]"
    }
  },
  "no": {
    "label": {
      "translate": "gui.back",
      "color": "red"
    },
    "action": {
      "type": "show_dialog",
      "dialog": "i-editor:set_component"
    }
  }
}