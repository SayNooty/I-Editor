{
  "type": "minecraft:confirmation",
  "title": [
    {
      "translate": "title.i-editor.component",
      "fallback": "Component: "
    },
    {
      "translate": "component.name.repair_cost",
      "fallback": "Repair Cost",
      "color": "yellow"
    }
  ],
  "external_title": {
    "translate": "component.name.repair_cost",
    "fallback": "Repair Cost"
  },
  "body": {
    "type": "minecraft:item",
    "item": {
      "id": "minecraft:experience_bottle"
    },
    "description": {
      "translate": "text.i-editor.component_repair_cost_info",
      "fallback": "Enter the value number to be added to the base level cost when repairing, combining, or renaming an item using the anvil:",
      "color": "gray"
    },
    "show_decorations": false,
    "show_tooltip": false
  },
  "inputs": [
    {
      "type": "minecraft:text",
      "key": "cost",
      "width": 100,
      "label": [
        {
          "translate": "text.i-editor.cost",
          "fallback": "Cost "
        },
        {
          "translate": "text.i-editor.min_0",
          "fallback": "<min: 0>",
          "color": "dark_gray"
        }
      ],
      "initial": "0",
      "max_length": 9999
    }
  ],
  "can_close_with_escape": true,
  "pause": false,
  "after_action": "none",
  "yes": {
    "label": {
      "translate": "gui.done",
      "color": "green"
    },
    "action": {
      "type": "dynamic/run_command",
      "template": "item modify entity @s weapon.mainhand [{\"function\":\"minecraft:set_components\",\"components\":{\"minecraft:repair_cost\":$(cost)}}]"
    }
  },
  "no": {
    "label": {
      "translate": "gui.back",
      "color": "red"
    },
    "action": {
      "type": "show_dialog",
      "dialog": "i-editor:set_component"
    }
  }
}