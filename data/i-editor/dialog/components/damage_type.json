{
  "type": "minecraft:confirmation",
  "title": [
    {
      "translate": "title.i-editor.component",
      "fallback": "Component: "
    },
    {
      "translate": "component.name.damage_type",
      "fallback": "Damage Type",
      "color": "yellow"
    }
  ],
  "external_title": {
    "translate": "component.name.damage_type",
    "fallback": "Damage Type"
  },
  "body": {
    "type": "minecraft:item",
    "item": {
      "id": "minecraft:stone_sword"
    },
    "description": {
      "translate": "text.i-editor.component_damage_type_info",
      "fallback": "Adjust the damage type for the item:",
      "color": "gray"
    },
    "show_decorations": false,
    "show_tooltip": false
  },
  "inputs": [
    {
      "type": "minecraft:text",
      "key": "damage_type",
      "width": 150,
      "label": {
        "translate": "text.i-editor.damage_type",
        "fallback": "Damage Type"
      },
      "max_length": 9999
    }
  ],
  "can_close_with_escape": true,
  "pause": false,
  "after_action": "none",
  "yes": {
    "label": {
      "translate": "gui.done",
      "color": "green"
    },
    "action": {
      "type": "dynamic/run_command",
      "template": "item modify entity @s weapon.mainhand [{\"function\":\"minecraft:set_components\",\"components\":{\"minecraft:damage_type\":\"$(damage_type)\"}}]"
    }
  },
  "no": {
    "label": {
      "translate": "gui.back",
      "color": "red"
    },
    "action": {
      "type": "show_dialog",
      "dialog": "i-editor:set_component"
    }
  }
}