{
  "type": "minecraft:confirmation",
  "title": [
    {
      "translate": "title.i-editor.component",
      "fallback": "Component: "
    },
    {
      "translate": "component.name.max_stack_size",
      "fallback": "Max Stack Size",
      "color": "yellow"
    }
  ],
  "external_title": {
    "translate": "component.name.max_stack_size",
    "fallback": "Max Stack Size"
  },
  "body": {
    "type": "minecraft:plain_message",
    "contents": {
      "translate": "text.i-editor.component_max_stack_size_info",
      "fallback": "Enter the maximum stack size in one slot:",
      "color": "gray"
    },
    "width": 300
  },
  "inputs": [
    {
      "type": "minecraft:number_range",
      "key": "count",
      "label": {
        "translate": "text.i-editor.count",
        "fallback": "Count"
      },
      "start": 1,
      "end": 99,
      "step": 1,
      "initial": 64
    }
  ],
  "can_close_with_escape": true,
  "pause": false,
  "after_action": "none",
  "yes": {
    "label": {
      "translate": "gui.done",
      "color": "green"
    },
    "action": {
      "type": "dynamic/run_command",
      "template": "item modify entity @s weapon.mainhand [{\"function\":\"minecraft:set_components\",\"components\":{\"minecraft:max_stack_size\":$(count)}}]"
    }
  },
  "no": {
    "label": {
      "translate": "gui.back",
      "color": "red"
    },
    "action": {
      "type": "show_dialog",
      "dialog": "i-editor:set_component"
    }
  }
}