{
  "type": "minecraft:confirmation",
  "title": [
    {
      "translate": "title.i-editor.component",
      "fallback": "Component: "
    },
    {
      "translate": "component.name.use_effects",
      "fallback": "Use Effects",
      "color": "yellow"
    }
  ],
  "external_title": {
    "translate": "component.name.use_effects",
    "fallback": "Use Effects"
  },
  "body": {
    "type": "minecraft:item",
    "item": {
      "id": "minecraft:golden_spear"
    },
    "description": {
      "translate": "text.i-editor.component_use_effects_info",
      "fallback": "Adjust the use of the item while running, the speed multiplier, and whether the use generates:",
      "color": "gray"
    },
    "show_decorations": false,
    "show_tooltip": false
  },
  "inputs": [
    {
      "type": "minecraft:number_range",
      "key": "speed_multiplier",
      "width": 150,
      "label": {
        "translate": "text.i-editor.speed_multiplier",
        "fallback": "Speed Multiplier"
      },
      "start": 0,
      "end": 1,
      "step": 0.1,
      "initial": 0.2
    },
    {
      "type": "minecraft:boolean",
      "key": "can_sprint",
      "label": {
        "translate": "text.i-editor.can_sprint",
        "fallback": "Can Sprint"
      },
      "initial": false
    },
    {
      "type": "minecraft:boolean",
      "key": "interact_vibrations",
      "label": {
        "translate": "text.i-editor.interact_vibrations",
        "fallback": "Interact Vibrations"
      },
      "initial": true
    }
  ],
  "can_close_with_escape": true,
  "pause": false,
  "after_action": "none",
  "yes": {
    "label": {
      "translate": "gui.done",
      "color": "green"
    },
    "action": {
      "type": "dynamic/run_command",
      "template": "item modify entity @s weapon.mainhand [{\"function\":\"minecraft:set_components\",\"components\":{\"minecraft:use_effects\":{\"speed_multiplier\":$(speed_multiplier),\"can_sprint\":$(can_sprint),\"interact_vibrations\":$(interact_vibrations)}}}]"
    }
  },
  "no": {
    "label": {
      "translate": "gui.back",
      "color": "red"
    },
    "action": {
      "type": "show_dialog",
      "dialog": "i-editor:set_component"
    }
  }
}