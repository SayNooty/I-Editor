{
  "type": "minecraft:confirmation",
  "title": [
    {
      "translate": "title.i-editor.component",
      "fallback": "Component: "
    },
    {
      "translate": "component.name.enchantable",
      "fallback": "Enchantable",
      "color": "yellow"
    }
  ],
  "external_title": {
    "translate": "component.name.enchantable",
    "fallback": "Enchantable"
  },
  "body": {
    "type": "minecraft:plain_message",
    "contents": {
      "translate": "text.i-editor.component_enchantable_info",
      "fallback": "Enter the enchanted cost level that you will need in the enchanting table:",
      "color": "gray"
    },
    "width": 300
  },
  "inputs": [
    {
      "type": "minecraft:text",
      "key": "value",
      "width": 125,
      "label": [
        {
          "translate": "text.i-editor.value",
          "fallback": "Value "
        },
        {
          "translate": "text.i-editor.value_min",
          "fallback": "<min: 1>",
          "color": "dark_gray"
        }
      ],
      "max_length": 9999
    }
  ],
  "can_close_with_escape": true,
  "pause": false,
  "after_action": "none",
  "yes": {
    "label": {
      "translate": "gui.done",
      "color": "green"
    },
    "action": {
      "type": "dynamic/run_command",
      "template": "item modify entity @s weapon.mainhand [{\"function\":\"minecraft:set_components\",\"components\":{\"minecraft:enchantable\":{\"value\":$(value)}}}]"
    }
  },
  "no": {
    "label": {
      "translate": "gui.back",
      "color": "red"
    },
    "action": {
      "type": "show_dialog",
      "dialog": "i-editor:set_component"
    }
  }
}