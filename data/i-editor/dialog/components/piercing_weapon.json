{
  "type": "minecraft:confirmation",
  "title": [
    {
      "translate": "title.i-editor.component",
      "fallback": "Component: "
    },
    {
      "translate": "component.name.piercing_weapon",
      "fallback": "Piercing Weapon",
      "color": "yellow"
    }
  ],
  "external_title": {
    "translate": "component.name.piercing_weapon",
    "fallback": "Piercing Weapon"
  },
  "body": {
    "type": "minecraft:item",
    "item": {
      "id": "minecraft:diamond_spear"
    },
    "description": {
      "translate": "text.i-editor.component_minimum_piercing_weapon_info",
      "fallback": "Setting whether an item will attack through targets and whether it will bounce:",
      "color": "gray"
    },
    "show_decorations": false,
    "show_tooltip": false
  },
  "inputs": [
    {
      "type": "minecraft:boolean",
      "key": "deals_knockback",
      "label": {
        "translate": "text.i-editor.deals_knockback",
        "fallback": "Deals Knockback"
      },
      "initial": true
    },
    {
      "type": "minecraft:boolean",
      "key": "dismounts",
      "label": {
        "translate": "text.i-editor.dismounts",
        "fallback": "Dismounts"
      },
      "initial": false
    },
    {
      "type": "minecraft:text",
      "key": "sound",
      "width": 150,
      "label": {
        "translate": "text.i-editor.sound",
        "fallback": "Sound"
      },
      "max_length": 9999
    },
    {
      "type": "minecraft:text",
      "key": "hit_sound",
      "width": 150,
      "label": {
        "translate": "text.i-editor.hit_sound",
        "fallback": "Hit Sound"
      },
      "initial": "minecraft:item.spear.hit",
      "max_length": 9999
    }
  ],
  "can_close_with_escape": true,
  "pause": false,
  "after_action": "none",
  "yes": {
    "label": {
      "translate": "gui.done",
      "color": "green"
    },
    "action": {
      "type": "dynamic/run_command",
      "template": "item modify entity @s weapon.mainhand [{\"function\":\"minecraft:set_components\",\"components\":{\"minecraft:piercing_weapon\":{\"deals_knockback\":$(deals_knockback),\"dismounts\":$(dismounts),\"sound\":\"$(sound)\",\"hit_sound\":\"$(hit_sound)\"}}}]"
    }
  },
  "no": {
    "label": {
      "translate": "gui.back",
      "color": "red"
    },
    "action": {
      "type": "show_dialog",
      "dialog": "i-editor:set_component"
    }
  }
}