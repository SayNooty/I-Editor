{
  "type": "minecraft:confirmation",
  "title": [
    {
      "translate": "title.i-editor.component",
      "fallback": "Component: "
    },
    {
      "translate": "component.name.minimum_attack_charge",
      "fallback": "Minimum Attack Charge",
      "color": "yellow"
    }
  ],
  "external_title": {
    "translate": "component.name.minimum_attack_charge",
    "fallback": "Minimum Attack Charge"
  },
  "body": {
    "type": "minecraft:item",
    "item": {
      "id": "minecraft:stone_spear"
    },
    "description": {
      "translate": "text.i-editor.component_minimum_attack_charge_info",
      "fallback": "Enter the minimum attack charge required to attack with this item:",
      "color": "gray"
    },
    "show_decorations": false,
    "show_tooltip": false
  },
  "inputs": [
    {
      "type": "minecraft:number_range",
      "key": "minimum_attack_charge",
      "label": {
        "translate": "text.i-editor.minimum_attack_charge",
        "fallback": "Minimum Attack Charge"
      },
      "start": 0,
      "end": 1,
      "step": 0.1,
      "initial": 0
    }
  ],
  "can_close_with_escape": true,
  "pause": false,
  "after_action": "none",
  "yes": {
    "label": {
      "translate": "gui.done",
      "color": "green"
    },
    "action": {
      "type": "dynamic/run_command",
      "template": "item modify entity @s weapon.mainhand [{\"function\":\"minecraft:set_components\",\"components\":{\"minecraft:minimum_attack_charge\":$(minimum_attack_charge)}}]"
    }
  },
  "no": {
    "label": {
      "translate": "gui.back",
      "color": "red"
    },
    "action": {
      "type": "show_dialog",
      "dialog": "i-editor:set_component"
    }
  }
}