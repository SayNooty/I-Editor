{
  "type": "minecraft:confirmation",
  "title": [
    {
      "translate": "title.i-editor.component",
      "fallback": "Component: "
    },
    {
      "translate": "component.name.enchantment_glint_override",
      "fallback": "Enchantment Glint Override",
      "color": "yellow"
    }
  ],
  "external_title": {
    "translate": "component.name.enchantment_glint_override",
    "fallback": "Enchantment Glint Override"
  },
  "body": {
    "type": "minecraft:item",
    "item": {
      "id": "minecraft:experience_bottle"
    },
    "description": {
      "translate": "text.i-editor.component_enchantment_glint_override_info",
      "fallback": "Click on the checkmark so that the item can glint like enchanted books:",
      "color": "gray"
    },
    "show_decorations": false,
    "show_tooltip": false
  },
  "inputs": [
    {
      "type": "minecraft:boolean",
      "key": "glint_override",
      "label": [
        {
          "translate": "text.i-editor.glint_override",
          "fallback": "Glint Override"
        }
      ],
      "initial": false
    }
  ],
  "can_close_with_escape": true,
  "pause": false,
  "after_action": "none",
  "yes": {
    "label": {
      "translate": "gui.done",
      "color": "green"
    },
    "action": {
      "type": "dynamic/run_command",
      "template": "item modify entity @s weapon.mainhand [{\"function\":\"minecraft:set_components\",\"components\":{\"minecraft:enchantment_glint_override\":$(glint_override)}}]"
    }
  },
  "no": {
    "label": {
      "translate": "gui.back",
      "color": "red"
    },
    "action": {
      "type": "show_dialog",
      "dialog": "i-editor:set_component"
    }
  }
}