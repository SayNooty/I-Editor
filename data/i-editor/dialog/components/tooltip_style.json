{
  "type": "minecraft:confirmation",
  "title": [
    {
      "translate": "title.i-editor.component",
      "fallback": "Component: "
    },
    {
      "translate": "component.name.tooltip_style",
      "fallback": "Tooltip Style",
      "color": "yellow"
    }
  ],
  "external_title": {
    "translate": "component.name.tooltip_style",
    "fallback": "Tooltip Style"
  },
  "body": {
    "type": "minecraft:item",
    "item": {
      "id": "minecraft:painting"
    },
    "description": {
      "translate": "text.i-editor.component_tooltip_style_info",
      "fallback": "Enter the path to the background texture file that will be displayed when the cursor hovers over the item:",
      "color": "gray"
    },
    "show_decorations": false,
    "show_tooltip": false
  },
  "inputs": [
    {
      "type": "minecraft:text",
      "key": "tooltip_style",
      "label": {
        "translate": "text.i-editor.tooltip_style",
        "fallback": "Tooltip Style"
      },
      "max_length": 9999
    }
  ],
  "can_close_with_escape": true,
  "pause": false,
  "after_action": "none",
  "yes": {
    "label": {
      "translate": "gui.done",
      "color": "green"
    },
    "action": {
      "type": "dynamic/run_command",
      "template": "item modify entity @s weapon.mainhand [{\"function\":\"minecraft:set_components\",\"components\":{\"minecraft:tooltip_style\":\"$(tooltip_style)\"}}]"
    }
  },
  "no": {
    "label": {
      "translate": "gui.back",
      "color": "red"
    },
    "action": {
      "type": "show_dialog",
      "dialog": "i-editor:set_component"
    }
  }
}