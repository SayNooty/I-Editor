{
  "type": "minecraft:confirmation",
  "title": [
    {
      "translate": "title.i-editor.component",
      "fallback": "Component: "
    },
    {
      "translate": "component.name.charged_projectiles",
      "fallback": "Charged Projectiles",
      "color": "yellow"
    }
  ],
  "external_title": {
    "translate": "component.name.charged_projectiles",
    "fallback": "Charged Projectiles"
  },
  "body": {
    "type": "minecraft:item",
    "item": {
      "id": "minecraft:crossbow"
    },
    "description": {
      "translate": "text.i-editor.component_charged_projectiles_info",
      "fallback": "Enter the item ID that will be charged in the crossbow and select the count:",
      "color": "gray"
    },
    "show_decorations": false,
    "show_tooltip": false
  },
  "inputs": [
    {
      "type": "minecraft:text",
      "key": "item_id",
      "label": {
        "translate": "text.i-editor.item_id",
        "fallback": "Item ID"
      },
      "initial": "minecraft:arrow",
      "max_length": 9999
    },
    {
      "type": "minecraft:number_range",
      "key": "count",
      "label": {
        "translate": "text.i-editor.count",
        "fallback": "Count"
      },
      "start": 1,
      "end": 99,
      "step": 1,
      "initial": 1
    }
  ],
  "can_close_with_escape": true,
  "pause": false,
  "after_action": "none",
  "yes": {
    "label": {
      "translate": "gui.done",
      "color": "green"
    },
    "action": {
      "type": "dynamic/run_command",
      "template": "item modify entity @s weapon.mainhand [{\"function\":\"minecraft:set_components\",\"components\":{\"minecraft:charged_projectiles\":[{\"id\":\"$(item_id)\",\"count\":$(count)}]}}]"
    }
  },
  "no": {
    "label": {
      "translate": "gui.back",
      "color": "red"
    },
    "action": {
      "type": "show_dialog",
      "dialog": "i-editor:set_component"
    }
  }
}