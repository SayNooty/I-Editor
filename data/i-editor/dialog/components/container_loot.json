{
  "type": "minecraft:confirmation",
  "title": [
    {
      "translate": "title.i-editor.component",
      "fallback": "Component: "
    },
    {
      "translate": "component.name.container_loot",
      "fallback": "Container Loot",
      "color": "yellow"
    }
  ],
  "external_title": {
    "translate": "component.name.container_loot",
    "fallback": "Container Loot"
  },
  "body": {
    "type": "minecraft:item",
    "item": {
      "id": "minecraft:chest"
    },
    "description": {
      "translate": "text.i-editor.component_container_loot_info",
      "fallback": "Enter the loot table ID that will be contained in the container:",
      "color": "gray"
    },
    "show_decorations": false,
    "show_tooltip": false
  },
  "inputs": [
    {
      "type": "minecraft:text",
      "key": "loot_table_id",
      "label": {
        "translate": "text.i-editor.loot_table_id",
        "fallback": "Loot Table ID"
      },
      "initial": "minecraft:chests/ancient_city",
      "max_length": 9999
    }
  ],
  "can_close_with_escape": true,
  "pause": false,
  "after_action": "none",
  "yes": {
    "label": {
      "translate": "gui.done",
      "color": "green"
    },
    "action": {
      "type": "dynamic/run_command",
      "template": "item modify entity @s weapon.mainhand [{\"function\":\"minecraft:set_components\",\"components\":{\"minecraft:container_loot\":{\"loot_table\":\"$(loot_table_id)\"}}}]"
    }
  },
  "no": {
    "label": {
      "translate": "gui.back",
      "color": "red"
    },
    "action": {
      "type": "show_dialog",
      "dialog": "i-editor:set_component"
    }
  }
}