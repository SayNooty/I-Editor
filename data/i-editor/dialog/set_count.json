{
  "type": "minecraft:confirmation",
  "title": {
    "translate": "title.i-editor.set_count",
    "fallback": "Set Count"
  },
  "body": {
    "type": "minecraft:plain_message",
    "contents": {
      "translate": "text.i-editor.set_count_info",
      "fallback": "Select the count of the item:",
      "color": "gray"
    },
    "width": 300
  },
  "inputs": [
    {
      "type": "minecraft:number_range",
      "key": "count",
      "label": {
        "translate": "text.i-editor.count",
        "fallback": "Count"
      },
      "start": 1,
      "end": 99,
      "step": 1,
      "initial": 1
    }
  ],
  "can_close_with_escape": true,
  "pause": false,
  "after_action": "none",
  "yes": {
    "label": {
      "translate": "gui.done",
      "color": "green"
    },
    "action": {
      "type": "dynamic/run_command",
      "template": "item modify entity @s weapon.mainhand [{\"function\":\"minecraft:set_count\",\"count\":$(count)}]"
    }
  },
  "no": {
    "label": {
      "translate": "gui.back",
      "color": "red"
    },
    "action": {
      "type": "minecraft:show_dialog",
      "dialog": "i-editor:menu"
    }
  }
}