{
  "type": "minecraft:confirmation",
  "title": {
    "translate": "title.i-editor.set_model",
    "fallback": "Set Model"
  },
  "body": {
    "type": "minecraft:plain_message",
    "contents": {
      "translate": "text.i-editor.set_model_info",
      "fallback": "Enter the path to the desired item model in this field:",
      "color": "gray"
    },
    "width": 300
  },
  "inputs": [
    {
      "type": "minecraft:text",
      "key": "model",
      "label": {
        "translate": "text.i-editor.model",
        "fallback": "Model"
      },
      "max_length": 9999
    }
  ],
  "can_close_with_escape": true,
  "pause": false,
  "after_action": "none",
  "yes": {
    "label": {
      "translate": "gui.done",
      "fallback": "Confirm",
      "color": "green"
    },
    "action": {
      "type": "dynamic/run_command",
      "template": "item modify entity @s weapon.mainhand {\"function\":\"minecraft:set_components\",\"components\":{\"minecraft:item_model\":\"$(model)\"}}"
    }
  },
  "no": {
    "label": {
      "translate": "gui.back",
      "fallback": "Back",
      "color": "red"
    },
    "action": {
      "type": "minecraft:show_dialog",
      "dialog": "i-editor:menu"
    }
  }
}