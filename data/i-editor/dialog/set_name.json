{
  "type": "minecraft:confirmation",
  "title": {
    "translate": "title.i-editor.set_name",
    "fallback": "Set Name"
  },
  "body": {
    "type": "minecraft:plain_message",
    "contents": {
      "translate": "text.i-editor.set_name_info",
      "fallback": "Enter the name of the item and configure additional visualization settings:",
      "color": "gray"
    },
    "width": 300
  },
  "inputs": [
    {
      "type": "minecraft:text",
      "key": "name",
      "label": {
        "translate": "text.i-editor.name",
        "fallback": "Name"
      },
      "max_length": 100
    },
    {
      "type": "minecraft:single_option",
      "key": "color",
      "label": {
        "translate": "text.i-editor.color",
        "fallback": "Color"
      },
      "options": [
        {
          "id": "white",
          "display": {
            "translate": "color.minecraft.white",
            "color": "white"
          }
        },
        {
          "id": "gray",
          "display": {
            "translate": "color.minecraft.light_gray",
            "color": "gray"
          }
        },
        {
          "id": "dark_gray",
          "display": {
            "translate": "color.minecraft.gray",
            "color": "dark_gray"
          }
        },
        {
          "id": "black",
          "display": {
            "translate": "color.minecraft.black",
            "color": "black"
          }
        },
        {
          "id": "dark_red",
          "display": {
            "translate": "text.i-editor.dark_red",
            "fallback": "Dark Red",
            "color": "dark_red"
          }
        },
        {
          "id": "red",
          "display": {
            "translate": "color.minecraft.red",
            "color": "red"
          }
        },
        {
          "id": "gold",
          "display": {
            "translate": "text.i-editor.gold",
            "fallback": "Gold",
            "color": "gold"
          }
        },
        {
          "id": "yellow",
          "display": {
            "translate": "color.minecraft.yellow",
            "color": "yellow"
          }
        },
        {
          "id": "green",
          "display": {
            "translate": "color.minecraft.green",
            "color": "green"
          }
        },
        {
          "id": "dark_green",
          "display": {
            "translate": "text.i-editor.dark_green",
            "fallback": "Dark Green",
            "color": "dark_green"
          }
        },
        {
          "id": "dark_aqua",
          "display": {
            "translate": "color.minecraft.cyan",
            "color": "dark_aqua"
          }
        },
        {
          "id": "aqua",
          "display": {
            "translate": "color.minecraft.light_blue",
            "color": "aqua"
          }
        },
        {
          "id": "blue",
          "display": {
            "translate": "color.minecraft.blue",
            "color": "blue"
          }
        },
        {
          "id": "dark_blue",
          "display": {
            "translate": "text.i-editor.dark_blue",
            "fallback": "Dark Blue",
            "color": "dark_blue"
          }
        },
        {
          "id": "dark_purple",
          "display": {
            "translate": "text.i-editor.dark_purple",
            "fallback": "Dark Purple",
            "color": "dark_purple"
          }
        },
        {
          "id": "light_purple",
          "display": {
            "translate": "text.i-editor.light_purple",
            "fallback": "Light Purple",
            "color": "light_purple"
          }
        }
      ]
    },
    {
      "type": "minecraft:boolean",
      "key": "shadow_color",
      "label": {
        "translate": "text.i-editor.shadow_color",
        "fallback": "Shadow Color",
        "hover_event": {
          "action": "show_text",
          "value": {
            "translate": "text.i-editor.shadow_color_info",
            "fallback": "Adds a shadow to the text\nwhen there is a check mark",
            "color": "gray"
          }
        }
      },
      "initial": true,
      "on_true": " ",
      "on_false": "\"shadow_color\":0,"
    },
    {
      "type": "minecraft:boolean",
      "key": "bold",
      "label": {
        "text": "Bold",
        "bold": true
      },
      "initial": false
    },
    {
      "type": "minecraft:boolean",
      "key": "italic",
      "label": {
        "text": "Italic",
        "italic": true
      },
      "initial": false
    },
    {
      "type": "minecraft:boolean",
      "key": "underlined",
      "label": {
        "text": "Underlined",
        "underlined": true
      },
      "initial": false
    },
    {
      "type": "minecraft:boolean",
      "key": "strikethrough",
      "label": {
        "text": "Strikethrough",
        "strikethrough": true
      },
      "initial": false
    },
    {
      "type": "minecraft:boolean",
      "key": "obfuscated",
      "label": {
        "text": "Obfuscated",
        "obfuscated": true
      },
      "initial": false
    }
  ],
  "can_close_with_escape": true,
  "pause": false,
  "after_action": "none",
  "yes": {
    "label": {
      "translate": "gui.done",
      "color": "green"
    },
    "action": {
      "type": "dynamic/run_command",
      "template": "item modify entity @s weapon.mainhand [{\"function\":\"minecraft:set_name\",\"name\":{\"text\":\"$(name)\",\"color\":\"$(color)\",$(shadow_color)\"bold\":$(bold),\"italic\":$(italic),\"underlined\":$(underlined),\"strikethrough\":$(strikethrough),\"obfuscated\":$(obfuscated)}}]"
    }
  },
  "no": {
    "label": {
      "translate": "gui.back",
      "color": "red"
    },
    "action": {
      "type": "minecraft:show_dialog",
      "dialog": "i-editor:menu"
    }
  }
}