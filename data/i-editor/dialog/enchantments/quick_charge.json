{
  "type": "minecraft:confirmation",
  "title": [
    {
      "translate": "title.i-editor.enchantment",
      "fallback": "Enchantment: "
    },
    {
      "translate": "enchantment.minecraft.quick_charge",
      "color": "yellow"
    }
  ],
  "external_title": {
    "translate": "enchantment.minecraft.quick_charge"
  },
  "body": {
    "type": "minecraft:plain_message",
    "contents": {
      "translate": "title.i-editor.enchantment_info",
      "fallback": "Drag the slider to the desired enchantment level:",
      "color": "gray"
    },
    "width": 300
  },
  "inputs": [
    {
      "type": "minecraft:number_range",
      "key": "level",
      "label": {
        "translate": "text.i-editor.lvl",
        "fallback": "lvl"
      },
      "start": 1,
      "end": 255,
      "step": 1,
      "initial": 1
    }
  ],
  "can_close_with_escape": true,
  "pause": false,
  "after_action": "none",
  "yes": {
    "label": {
      "translate": "gui.done",
      "color": "green"
    },
    "action": {
      "type": "dynamic/run_command",
      "template": "item modify entity @s weapon.mainhand {\"function\":\"minecraft:set_enchantments\",\"enchantments\":{\"minecraft:quick_charge\":$(level)}}"
    }
  },
  "no": {
    "label": {
      "translate": "gui.back",
      "color": "red"
    },
    "action": {
      "type": "show_dialog",
      "dialog": "i-editor:set_enchantment"
    }
  }
}